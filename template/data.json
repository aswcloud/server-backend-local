[{
    "dataType": "deployment",
    "namespace": "{{ .Namespace }}",
    "name": "{{ .DeploymentName }}",
    "template_name": "{{ .TemplateName }}",
    "replica_count": 1,
    "volume": [{
        "name": "{{ .PvcName }}",
        "claim_name": "{{ .PvcName }}"
    }],
    "containers": [{
        "name": "{{ .TemplateName }}",
        "image": "{{ .Image }}",
        "ports": [{{ .ContainerPort }}],
        "volume_mount": [{
            "name": "{{ .PvcName }}",
            "mount_path": "{{ .PvcPath }}"
        }]
    }]
},
{
    "dataType": "pvc",
    "namespace": "{{ .Namespace }}",
    "name": "{{ .PvcName }}",
    "capacity": "{{ .Capacity }}",
    "accessMode": ["ReadWriteOnce"],
    "storage_class_name": "{{ .StorageClassName }}"
},
{
    "dataType": "svc",
    "namespace": "{{ .Namespace }}",
    "name": "{{ .PvcName }}",
    "type": "NodePort",
    "template_name": "{{ .TemplateName }}",
    "ports": [{
        "name": "http",
        "target_port": 80,
        "container_port": {{ .ContainerPort }}
    }]
}
]